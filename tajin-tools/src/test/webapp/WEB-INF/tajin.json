{
    "debug": true,

    "client": {
        "modules": {
            "log": {
                "level": "all"
            },
            "app": {
                "ws": {
                    "api": "http://${domain}/api",
                    "root": "http://${domain}"
                },
                "mocked": $mocked
            },

            "i18n": {
                "debug": true,
                "attributes": ["href", "src"],
                "bundles": {
                    "mybnd": {
                        "location": "js/i18n",
                        "preload": ["en"]
                    },
                    "mybnd2": {
                        "location": "http://remote",
                        "preload": ["en"]
                    }
                }
            }
        }
    },

    "merge": {
        "cache": true,
        "failOnMissing": false,
        "watch": false,
        "min": true,
        "js/lib.js": [
            {
                "f": "http://code.jquery.com/jquery-1.9.1.js",
                "min": "http://code.jquery.com/jquery-1.9.1.min.js"
            },
            {
                "f": "js/jquery/jquery.fastLiveFilter.js",
                "min": "js/jquery/jquery.fastLiveFilter.min.js"
            },
            "js/inexisting.js",
            {
                "invalid": "js/jquery/jquery.json-2.2.min.js",
                "min": false
            },
            {
                "f": "js/jquery/jquery.json-2.2.min.js",
                "watch": true,
                "min": false
            },
            "js/jquery/jquery.purl-2.2.js",
            {
                "f": "js/jquery/jquery.tooltip.js",
                "watch": true
            }
        ],
        "css/big.css": [
            "css/sample1.css",
            {
                "f": "css/sample2.css",
                "watch": true
            },
            "css/inexisting.css",
            {
                "f": "css/foundation.css",
                "min": "css/foundation.min.css"
            }
        ]

    }

}
