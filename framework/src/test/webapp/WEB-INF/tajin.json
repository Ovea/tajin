{
    "debug": true,

    "client": {
        "modules": {
            "log": {
                "level": "all"
            },
            "app": {
                "ws": {
                    "api": "http://${domain}/api",
                    "root": "http://${domain}"
                },
                "mocked": $mocked
            },

            "i18n": {
                "debug": true,
                "attributes": ["href", "src"],
                "bundles": {
                    "mybnd": {
                        "location": "js/i18n",
                        "preload": ["en"]
                    },
                    "mybnd2": {
                        "location": "http://remote",
                        "preload": ["en"]
                    }
                }
            }
        }
    },

    "minify": {
        "includes": [
            "js/**/*.js",
            "css/**/*.css",
            "css/inexisting.css"
        ],
        "excludes": []
    },

    "merge": {
        "js/lib.min.js": [
            "js/jquery/jquery-1.8.3.min.js",
            "js/jquery/jquery.fastLiveFilter.min.js",
            "js/jquery/jquery.json-2.2.min.js",
            "js/jquery/jquery.purl-2.2.min.js"
        ],
        "css/big.min.css": [
            "css/sample1.min.css",
            "css/sample2.min.css",
            "css/inexisting.min.css"
        ]
    }
}
