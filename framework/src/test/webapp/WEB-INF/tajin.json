{
    "debug": true,

    "client": {
        "modules": {
            "log": {
                "level": "all"
            },
            "app": {
                "ws": {
                    "api": "http://${domain}/api",
                    "root": "http://${domain}"
                },
                "mocked": $mocked
            },

            "i18n": {
                "debug": true,
                "attributes": ["href", "src"],
                "bundles": {
                    "mybnd": {
                        "location": "js/i18n",
                        "preload": ["en"]
                    }
                }
            }
        }
    },

    "minify": [
        "js/jquery/jquery-1.8.3.js",
        "js/jquery/jquery.fastLiveFilter.js",
        "js/jquery/jquery.mockjax.js",
        "js/jquery/jquery.purl-2.2.js",
        "js/jquery/jquery.tooltip.js",
        "css/sample1.css",
        "css/sample2.css",
        "css/inexisting.css"
    ],

    "merge": {
        "js/lib.js": [
            "js/jquery/jquery-1.8.3.min.js",
            "js/jquery/jquery.fastLiveFilter.min.js",
            "js/jquery/jquery.json-2.2.min.js",
            "js/jquery/jquery.purl-2.2.min.js"
        ],
        "css/big.css": [
            "css/sample1.min.css",
            "css/sample2.min.css",
            "css/inexisting.min.css"
        ]
    }
}
